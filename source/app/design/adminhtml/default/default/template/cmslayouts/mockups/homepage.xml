<cmslayout>
    <title>Homepage Layout</title>
    <active>1</active>
    <elements>
        <element id="theme-banner">
            <fields>
                <field type="text" name="text" label="Text" />
                <field type="color" name="color" label="Color" />
                <field type="text" name="image" label="Image" />
            </fields>
        </element>

        <element id="ad-main">
            <fields>
                <field type="text" name="text" label="Text" />
                <field type="select" name="text_alignment" label="Text Alignment">
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>
                <field type="text" name="image" label="Image" />
                <field type="text" name="button_link" label="Button Link" />
                <field type="text" name="button_text" label="Button Text" />
            </fields>
        </element>

        <element id="ad-product">
            <fields>
                <field type="product" name="product" label="Product ID" />
            </fields>
        </element>

        <element id="ad-left-top">
            <fields>
                <field type="text" name="text" label="Text" />
                <field type="select" name="text_alignment" label="Text Alignment">
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>
                <field type="text" name="image" label="Image" />
                <field type="text" name="button_link" label="Button Link" />
                <field type="text" name="button_text" label="Button Text" />
            </fields>
        </element>

        <element id="ad-left-bottom-1">
            <fields>
                <field type="text" name="text" label="Text" />
                <field type="select" name="text_alignment" label="Text Alignment">
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>
                <field type="text" name="image" label="Image" />
                <field type="text" name="button_link" label="Button Link" />
                <field type="text" name="button_text" label="Button Text" />
            </fields>
        </element>

        <element id="ad-left-bottom-2">
            <fields>
                <field type="text" name="text" label="Text" />
                <field type="select" name="text_alignment" label="Text Alignment">
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>
                <field type="text" name="image" label="Image" />
                <field type="text" name="button_link" label="Button Link" />
                <field type="text" name="button_text" label="Button Text" />
            </fields>
        </element>
    </elements>
</cmslayout>